<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#ffffff"
	android:paddingRight="20dp">

	<View
		android:id="@+id/view1"
		android:layout_width="2dp"
		android:layout_height="15dp"
		android:layout_marginLeft="30dp"
		android:background="#E9F01D"/>

	<TextView
		android:id="@+id/tv_showtime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/view1"
		android:text=""
		android:layout_marginLeft="30dp"
		android:textSize="12sp"/>

	<ImageView
		android:id="@+id/imv"
		android:layout_width="15dp"
		android:layout_height="15dp"
		android:layout_marginLeft="24dp"
		android:layout_below="@+id/view1"
		android:src="@drawable/image_1"/>

	<View
		android:id="@+id/view2"
		android:layout_width="2dp"
		android:layout_height="45dp"
		android:layout_below="@+id/imv"
		android:layout_marginLeft="30dp"
		android:background="#E9F01D"/>

	<RelativeLayout
		android:id="@+id/relative"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/imv"
		android:layout_marginLeft="2dp"
		android:layout_marginTop="-20dp"
		android:layout_toRightOf="@+id/imv"
		android:padding="5dp"
		android:background="@drawable/image_2">

		<TextView
			android:id="@+id/time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="5:20"
			android:background="@drawable/image_3"
			android:gravity="center"
			android:textSize="14sp"/>

		<TextView
			android:id="@+id/content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="3dp"
			android:layout_toRightOf="@id/time"
			android:text="由【江苏苏州中转部】发往【江苏苏州公司】"
			android:textSize="14sp"/>

	</RelativeLayout>

	<TextView
		android:id="@+id/day"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_alignBottom="@+id/view2"
		android:layout_marginTop="-2dp"
		android:textColor="#52F6E3"
		android:text="05月20日"
		android:textSize="8sp"/>

	<View
		android:id="@+id/view5"
		android:layout_width="2dp"
		android:layout_height="5dp"
		android:layout_below="@+id/day"
		android:layout_alignLeft="@+id/view2"
		android:background="#E9F01D"/>

</RelativeLayout>

